    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "cross-env": "^5.1.3",
    "eslint": "latest",
    "istanbul": "^0.4.5",
    "mockery": "^2.0.0",
    "nodemon": "latest",
    "parallelshell": "^3.0.2",
    "sinon": "^4.3.0",
    "sinon-bluebird": "^3.1.0",
    "sinon-chai": "^2.8.0",
    "supertest": "^3.0.0",
    "watch": "latest"
  },
  "main": "Sources/server.js",
